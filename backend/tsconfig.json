{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "es2020",
    "types": ["node"],
    "lib": ["es2020"],
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["scripts", "dist", "node_modules"]
}
